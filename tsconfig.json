{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "isolatedModules": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@config": ["config"],
      "@modules/*": ["modules/*"]
    },
    "esModuleInterop": true
  }
}
